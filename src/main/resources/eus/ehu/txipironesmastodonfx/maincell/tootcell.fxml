        <Image url="@../mainassets/black-heart_160.png"/>
    </ImageView>
    <ImageView fitHeight="30.0" fitWidth="25.0" layoutX="554.0" layoutY="117.0" pickOnBounds="true"
               preserveRatio="true">
        <Image url="@../mainassets/dark-retweet-512.png"/>
