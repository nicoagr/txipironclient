<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" maxHeight="-Infinity" maxWidth="500.0" minHeight="-Infinity" minWidth="500.0"
            prefHeight="100.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1">
    <Button styleClass="button_auth" fx:id="addAccBtn" layoutX="376.0" layoutY="36.0" mnemonicParsing="false" onAction="#addAccBtnClick"
            text="Add Account!" visible="false">
        <font>
            <Font size="13.0"/>
        </font>
    </Button>
    <TextField styleClass="texFill_auth" fx:id="mstdTokenTxt" layoutX="28.0" layoutY="37.0" prefHeight="26.0" prefWidth="326.0"
               promptText="Mastodon API Access Token - 44 characters long" visible="false"/>
    <Label styleClass="fill" fx:id="errorTxt" layoutX="28.0" layoutY="66.0"/>
    <Hyperlink fx:id="accessTokenAuthLink" layoutX="175.0" layoutY="63.0" onAction="#accessTokenAuthClick"
               text="(or paste access token instead)"/>
    <Button styleClass="button_auth" fx:id="oauthBtn" alignment="CENTER" contentDisplay="CENTER" layoutX="111.0" layoutY="36.0"
            mnemonicParsing="false" onAction="#oauthBtnClick" text="Add account through browser authentication"
            textAlignment="CENTER">
        <font>
            <Font size="13.0"/>
        </font>
    </Button>
</AnchorPane>
